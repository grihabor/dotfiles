#!/bin/bash

PROJECT_ROOT=$(fd --hidden --regex "^.git$" \
	--exclude .cargo \
	--exclude .local \
	--type d \
	--min-depth 2 \
	--max-depth 3 \
	$HOME |
	xargs dirname |
	fzf)

NAME=$(basename "$PROJECT_ROOT")
tmux has-session -t "$NAME"
if [ $? != 0 ]; then
	echo "Creating session $NAME"
	if [ "$TMUX" != "" ]; then
		FLAGS="-d"
	fi
	tmux new-session $FLAGS \
		-c "$PROJECT_ROOT" \
		-s "$NAME"
fi
if [ "$TMUX" == "" ]; then
	tmux attach -t "$NAME"
else
	tmux switch-client -t "$NAME"
fi
